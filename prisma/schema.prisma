generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// define your table models and push them to the database
model Customers {
  id        String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String @db.VarChar(255)
  email     String @db.VarChar(255)
  image_url String @db.VarChar(255)
}

model Invoices {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  customer_id String?  @db.Uuid
  amount      Int
  status      String   @db.VarChar(255)
  date        DateTime @db.Date
  Member      Members? @relation(fields: [memberId], references: [id])
  memberId    String?  @db.Uuid
}

model Revenue {
  month   String @unique @db.VarChar(4)
  revenue Int
}

model Users {
  id       String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name     String @db.VarChar(255)
  email    String @unique
  password String
}

model Members {
  id           String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nationalId   Int        @unique
  name         String     @db.VarChar(255)
  dateOfBirth  DateTime   @db.Date
  mobileNumber String     @db.VarChar(255)
  gender       Gender
  isDisabled   Boolean
  religion     String?    @db.VarChar(255)
  county       String     @db.VarChar(255)
  constituency String     @db.VarChar(255)
  ward         String     @db.VarChar(255)
  signature    String     @db.VarChar(255)
  createdAt    DateTime   @default(now()) @db.Timestamp(6)
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?  @db.Timestamp(6)
  invoices     Invoices[]
}

enum Gender {
  MALE
  FEMALE
}
